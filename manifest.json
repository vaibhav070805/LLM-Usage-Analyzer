{
  "manifest_version": 3,
  "name": "LLM Usage Analyzer",
  "version": "1.0",
  "description": "Analyzes user prompts on LLM platforms to generate usage insights.",
  "permissions": [
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*"
  ],
  "icons": {
    "120" : "logo.avif"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://gemini.google.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
